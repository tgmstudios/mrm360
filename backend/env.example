# Database
DATABASE_URL="postgresql://username:password@localhost:5432/mrm360?schema=public"

# Redis (for task queues)
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"

# Session
SESSION_SECRET="your-super-secret-session-key-here"

# External Services Configuration

# Authentik - Identity and Access Management
# Base URL for your Authentik instance (e.g., https://auth.yourdomain.com or http://localhost:9000)
AUTHENTIK_BASE_URL="http://localhost:9000"
# API token for Authentik (generate this in Authentik admin panel)
AUTHENTIK_TOKEN="your-authentik-api-token"
# Template for parent group names (must include {parent_team_type} placeholder)
AUTHENTIK_PARENT_GROUP_TEMPLATE="{parent_team_type}-team"
# Optional: Timeout for API calls in milliseconds (default: 30000)
AUTHENTIK_TIMEOUT="30000"
# Optional: Number of retry attempts for failed API calls (default: 3)
AUTHENTIK_RETRY_ATTEMPTS="3"
# Optional: Delay between retry attempts in milliseconds (default: 1000)
AUTHENTIK_RETRY_DELAY="1000"

# Wiki.js - Documentation Platform
WIKIJS_BASE_URL="http://localhost:3000"
WIKIJS_TOKEN="your-wikijs-api-token"
WIKIJS_BASE_PATH="/"

# Nextcloud - File Storage and Collaboration
NEXTCLOUD_BASE_URL="http://localhost:8080"
NEXTCLOUD_USERNAME="admin"
NEXTCLOUD_PASSWORD="your-nextcloud-password"
NEXTCLOUD_BASE_PATH="/"

# GitHub - Source Code and Team Management
GITHUB_BASE_URL="https://api.github.com"
GITHUB_TOKEN="your-github-personal-access-token"
GITHUB_ORGANIZATION="your-organization-name"
GITHUB_PARENT_TEAM_ID="your-parent-team-id"

# Discord Bot Configuration
# Discord Bot Token (from Discord Developer Portal)
DISCORD_BOT_TOKEN=your_bot_token_here
# Discord Server (Guild) ID
DISCORD_GUILD_ID=your_server_id_here
# Discord Category ID (where new channels will be created)
DISCORD_CATEGORY_ID=your_category_id_here
# Optional: Discord Bot Prefix (for commands)
DISCORD_BOT_PREFIX=!
# Optional: Discord Bot Status
DISCORD_BOT_STATUS=online
# Optional: Discord Bot Activity
DISCORD_BOT_ACTIVITY=Team Management

# Discord Role IDs for Onboarding
DISCORD_MEMBER_ROLE_ID=your_member_role_id_here
DISCORD_FIRST_YEAR_ROLE_ID=your_first_year_role_id_here
DISCORD_SECOND_YEAR_ROLE_ID=your_second_year_role_id_here
DISCORD_THIRD_YEAR_ROLE_ID=your_third_year_role_id_here
DISCORD_FOURTH_YEAR_ROLE_ID=your_fourth_year_role_id_here
DISCORD_ALUMNI_OTHER_ROLE_ID=your_alumni_other_role_id_here
DISCORD_OFFENSE_ROLE_ID=your_offense_role_id_here
DISCORD_DEFENSE_ROLE_ID=your_defense_role_id_here
DISCORD_CTF_ROLE_ID=your_ctf_role_id_here
DISCORD_GAMING_ROLE_ID=your_gaming_role_id_here

# Discord Onboarding Configuration
DISCORD_NEW_USERS_CHANNEL_ID=your_new_users_channel_id_here
DISCORD_OAUTH2_CLIENT_ID=your_discord_oauth2_client_id_here
DISCORD_OAUTH2_CLIENT_SECRET=your_discord_oauth2_client_secret_here
DISCORD_OAUTH2_REDIRECT_URI=http://localhost:3010/join/dd-verify

# ListMonk Newsletter Configuration
LISTMONK_BASE_URL=http://localhost:9000
LISTMONK_USERNAME=admin
LISTMONK_PASSWORD=your_listmonk_password_here
LISTMONK_NEWSLETTER_LIST_ID=your_newsletter_list_id_here
# Optional: Timeout for API calls in milliseconds (default: 30000)
LISTMONK_TIMEOUT=30000

# Logging
LOG_LEVEL="info"