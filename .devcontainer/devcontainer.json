{
  "name": "MRM360 Dev Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "backend",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",
  "remoteUser": "root",
  "overrideCommand": true,
  "forwardPorts": [3010, 3011, 3012, 3013, 3014],
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/root/.gitconfig,type=bind"
  ],
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "postCreateCommand": "ls /workspace && npm install --prefix /workspace/backend && npm install --prefix /workspace/frontend"
}
